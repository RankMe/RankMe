<h1>Nouveau site </h1>

<%= form_for( :site, :html => { :class => "form-inline", :role => "form" } ) do |f| %>
  <div class="form-group">
    <%= f.label :url, :class => "sr-only" %>
    <%= f.text_field :url, :class => "form-control", :placeholder => "http://votre-site.com" %>
  </div>
    <%= f.submit "Enregistrer", :class => "btn btn-primary" %>
<% end %>