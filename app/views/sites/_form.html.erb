

<div class="col-md-4 col-md-offset-3">
<h4>Nouveau site :</h4>

<%= form_for([@project, @project.sites.build], :html => { :class => "form-inline", :role => "form" }) do |f| %>
  <div class="form-group">
    <%= f.label :url, :class => "sr-only" %>
    <%= f.text_field :url, :class => "form-control", :placeholder => "http://votre-site.com" %>
  </div>
  <%= f.submit "Ajouter", :class => "btn btn-success" %>
<% end %>
</div>